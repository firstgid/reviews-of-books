<div class="form-horizontal", id="new-book-form">

<%= form_for @book do |f| %>
<div class="form-group">
<div class="col-md-offset-2">
  <%= f.select(:category_id, @categories, :prompt => 'Select Category') %>

  <%= f.file_field :book_img %>
  </div>
  </div>
<div class="form-group">
  <%= f.label :title, 'Book Title', class: "col-md-2 control-label" %>
  <%= f.text_field :title, :class => "col-md-10" %>

  <%= f.label :description, class: "col-md-2 control-label" %>
  <%= f.text_area :description, :size => '80x7', :class => "col-md-10" %>

  <%= f.label :author, class: "col-md-2 control-label" %>
  <%= f.text_field :author, :class => "col-lg-10" %>

  <%= f.submit :class => "btn btn-default col-md-offset-2" %>
  </div>
</div>
<% end %>

</div>
