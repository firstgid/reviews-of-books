<div class="review-rating" data-score="<%= review.rating %>"></div>

<p><%= review.comment %></p>

<% if user_signed_in? %>

  <% if current_user.id == review.user_id %>

    <%= link_to "Edit", edit_book_review_path(review.book, review) %>
    <%= link_to "Destroy", book_review_path(review.book, review), :method => :delete,
      :data => {confirm: 'Do you really want delete this Review?'} %>

  <% end %>

<% end %>
